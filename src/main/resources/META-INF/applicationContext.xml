<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="service"
          class="com.yauhenav.logic.service.Service">
        <constructor-arg index="0" ref="MySqlUserDao" />
        <constructor-arg index="1" ref="MySqlImageDao"/>
    </bean>

    <bean id="MySqlUserDao" class="com.yauhenav.logic.mysqldaos.MySqlUserDao">
        <constructor-arg index="0" ref="sessionUtilProd"/>
    </bean>

    <bean id="MySqlImageDao" class="com.yauhenav.logic.mysqldaos.MySqlImageDao">
        <constructor-arg index="0" ref="sessionUtilProd"/>
    </bean>
    
    <bean id="sessionUtilProd" class="com.yauhenav.logic.service.SessionUtilProd"
    factory-method="getSessionFactory">

    </bean>
</beans>